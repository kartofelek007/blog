---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
let titleA = SITE_TITLE.split(".")[0];
let titleB = SITE_TITLE.split(".")[1];
---

<header>
	<div class="header-container">
		<h1 class="page-title">
			<a href="/">
				{titleA}<b>.{titleB}</b>
			</a>
		</h1>
		<nav>
			<HeaderLink href="/">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</nav>
	</div>
</header>
<style lang="scss">
	header {
		border-bottom: 1px solid #EEF1FA;
		position: fixed;
		width: 100%;
		left: 0;
		top: 0;
		height: 100px;
		transition: 0.3s height;
		background: rgba(#F9FAFB, 0.7);
		z-index: 100;
		padding-left: 15px;
		padding-right: 15px;
		box-sizing: border-box;
	}

	.header-container {
		max-width: 75ch;
		height: 100%;
		width: 100%;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	header.is-sticky {
		backdrop-filter: blur(2px);
		height: 70px;
	}

	header b {
		font-weight: normal;
	}

	@media (max-width: 980px) {
		header {
			margin-left: 0;
			margin-right: 0;
		}
	}

	.page-title {
		font-weight: bold;
		margin: 0.5em 0;
		font-size: 1.7rem;
	}

	.page-title a {
		font-weight: inherit;
	}

	.page-title a:hover {
		text-decoration: none;
	}

	nav {
		display: flex;
		gap: 15px;
	}

	@media (max-width: 400px) {
		.page-title {
			font-size: 1em;
		}
		nav {
			gap: 10px;
			font-size: 14px;
		}
	}
</style>
<script>
	const header = document.querySelector("header");
	window.addEventListener("scroll", e => {
		header.classList.toggle("is-sticky", window.scrollY > 50)
	})
</script>
